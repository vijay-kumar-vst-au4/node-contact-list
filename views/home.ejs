<html>
<head>
<title>
    <%= locals.var %>
</title>
<link rel="stylesheet" href="/css/home.css">
</head>

<body>
    <h1>ContactList</h1>
    <div>
        <ul>
        <% for(let i of contact) { %>
           <div>
            <span> <%= i.name %></span>
            <span> <%= i.phone %></span>
           <div>
        <% } %>

            
        </ul>
    </div>
    <form action="/create-contact" method="POST">
    <input type="text" name="name" placeholder="enter the name" required>
    <input type="number"name="phone" placeholder="enter the number" required>
    <button type="submit">add contact</button>
    </form>
    <script type="text/javascript" src="/js/home.js"></script>
</body>

</html>